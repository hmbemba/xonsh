def format(svgPath: str) -> str:
    svgName = Path(svgPath).stem.lower().replace(' ', '_')
    with open(svgPath) as f:
        svgContent = f.read()

    return f'''
    {{% macro {svgName}() -%}}
        {svgContent}
    {{%- endmacro %}}
    '''

def appendTo(content, fileToAppend):
    with open(fileToAppend,'a') as f:
	    f.write(content) 




